<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".FoodDetailActivity"
    tools:layout_editor_absoluteX="5dp"
    tools:layout_editor_absoluteY="81dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="20dp"
        android:paddingLeft="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/food_pic_label"
                style="@style/AppTheme.Subheader"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Food Pictures:" />

            <ImageView
                android:id="@+id/food_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_launcher" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/food_items_label"
                style="@style/AppTheme.Subheader"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:text="Food Items:" />

            <TextView
                android:id="@+id/food_items"
                android:layout_width="270dp"
                android:layout_height="35dp"
                android:text="mango" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/description_label"
                style="@style/AppTheme.Subheader"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:text="Description:" />

            <TextView
                android:id="@+id/description"
                android:layout_width="270dp"
                android:layout_height="77dp"
                android:text="Food Description" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/producer_name_label"
                style="@style/AppTheme.Subheader"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:text="Producer: " />

            <TextView
                android:id="@+id/producer_name"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="Producer Name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/address_label"
                style="@style/AppTheme.Subheader"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:text="Address: " />

            <TextView
                android:id="@+id/address"
                android:layout_width="270dp"
                android:layout_height="77dp"
                android:text="Address" />
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/mapMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_place" />
</android.support.constraint.ConstraintLayout>